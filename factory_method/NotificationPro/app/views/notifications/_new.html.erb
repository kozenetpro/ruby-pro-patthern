<div class="max-w-3xl mx-auto p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md space-y-6">
  <h1 class="text-3xl font-extrabold text-gray-900 dark:text-gray-100 mb-6">Send Notification</h1>
  
  <%= form_with url: test_user_notifications_path(@user), local: true, class: "space-y-6", data: { controller: "form" } do |form| %>
    <!-- JSON Input Field -->
    <div>
      <%= form.label :json_input, "JSON Input", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.text_area :json_input, rows: 8, 
            class: "mt-1 block w-full p-3 sm:text-sm border rounded-md shadow-sm 
                   border-gray-300 dark:border-gray-700 
                   bg-white dark:bg-gray-900 
                   text-gray-900 dark:text-gray-100 
                   focus:ring-indigo-500 focus:border-indigo-500",
            id: "jsonInput", data: { form_target: "jsonInput" }, 
            placeholder: '{ "user_id": 1, "message": "Test message", "notification_type": "push" }' %>
    </div>

    <!-- Action Buttons -->
    <div class="grid grid-cols-2 gap-4">
      <button type="button" 
              data-action="form#addJsonTemplate" 
              class="w-full py-2 px-4 text-sm font-medium text-white 
                     bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-sm 
                     focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Add JSON Template
      </button>
      <button type="button" 
              data-action="form#toggleTheme" 
              class="w-full py-2 px-4 text-sm font-medium text-white 
                     bg-gray-600 hover:bg-gray-700 rounded-md shadow-sm 
                     focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
        Toggle Theme
      </button>
    </div>

    <!-- Submit Button -->
    <div>
      <%= form.submit "Test JSON", 
            class: "w-full py-2 px-4 text-sm font-medium text-white 
                   bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-sm 
                   focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
